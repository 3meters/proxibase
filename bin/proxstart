#!/bin/sh

# production proxibase startup script using nodemon
# see https://github.com/remy/nodemon
# Useage: 
#   cd <proxdir>
#   sudo bin/proxstart

if [ ! $PROX ]; then
  PROX='/usr/local/prox'
fi

if [ ! $PROXLOG ]; then
  PROXLOG='/var/log/prox'
fi

cd $PROX
nohup nodemon --watch lib --delay 1 prox.js >>$PROXLOG/prox.log 2>&1 &
