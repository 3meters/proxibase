#!/usr/bin/env node

/*
 * Command line interface for genData
 *
 * Usage:
 *
 *    node gen
 *    node gen --help
 */
var
  genData = require(__dirname + '/genData'),
  cli = require('commander')  // command line interface

cli
  .option('-u, --users <num>', 'users to generate [3]')
  .option('-b, --beacons <num>', 'beacons to generate [3]')
  .option('-e, --epb <num>', 'entities per beacon [5]')
  .option('-s, --spe <num>', 'sub entities per entity [5]')
  .option('-c, --cpe <num>', 'comments per entity [5]')
  .option('-d, --database <database>', 'database name [proxTest]', String, 'proxTest')
  .option('-v, --validate', 'validate database inserts against schema')
  .option('-f, --files', 'create files rather than update the database')
  .option('-o, --out <dir>', 'output directory for files [files]', String, 'files')
  .option('-x, --exp ', 'Use experimental foreach')
  .parse(process.argv)

genData(cli)
