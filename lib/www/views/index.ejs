<div class="topbar">
    <div class="fill">
        <div class="container">
            <a class="brand" href="/"><%= title %></a>
            <ul class="nav">
                <li class="active"><a href="/">Home</a></li>
                <li><a href="/createaccount">Create Account</a></li>
                <% if (user) { %>
                  <li><a href="/logout">Logout</a></li>
                <% } else { %>
                  <li><a href="/login">Login</a></li>
                <% } %>
            </ul>
            <% if (!user) { %>
            <form action="/login" method="post" class="pull-right">
                <input class="input-small" type="email" name="email" placeholder="Email">
                <input class="input-small" type="password" name="password" placeholder="Password">
                <button class="btn" type="submit">Login</button>
            </form>
            <% } else { %>
            <div class="pull-right">
                <h3><a href="/home" >Welcome <%= user.name.first %></a></h3>
            </div>
            <% } %>
        </div>
    </div>
</div>
<div class="content">
    <div class="row">
        <div class="span 16">
            <h4>Welcome to <%= title %></h4>
            <p>Be there do more</p>
        </div>
    </div>
</div>
