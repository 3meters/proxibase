<div class="topbar">
    <div class="fill">
        <div class="container">
            <a class="brand" href="/"><% appname %></a>
            <ul class="nav">
                <li>
                    <a href="/home">Home</a>
                </li>
                <li class="active">
                    <a id="add_beacon" href="/home/add">Add a beacon</a>
                </li>
                <li>
                    <a href="/home/archive">Beacon Archive</a>
                </li>
                <li>
                    <a href="/account">Account</a>
                </li>
                <li>
                    <a href="/logout">Logout</a>
                </li>
            </ul>
            <div class="pull-right">
                <h3><a href="/home" >Welcome <%= user.name.first %>!</a></h3>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="row">
        <div class="span 16">
            <h3>Add a beacon</h3>
            <form id="add_beacon" action="/home/add_beacon" method="post">
                <input type="hidden" name="_method" value="post">
                <fieldset>
                    <div class="clearfix">
                    <label for="url">URL:</label>
                    <div class="input">
                        <input class="xlarge" id="url" type="url" name="url" placeholder="http://www.google.com" required="required">
                    </div>
                </div>
                <div class="actions">
                    <button class="btn primary" type="submit">Add Beacon</button>
                    <button class="btn default" type="button" onclick="window.location.pathname = '/home';">Cancel</button>
                </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>

