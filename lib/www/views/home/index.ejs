<div class="topbar">
    <div class="fill">
        <div class="container">
            <a class="brand" href="/"><% appname %></a>
            <ul class="nav">
                <% if (path == '/home') { %>
                <li class="active">
                <% } else { %>
                <li>
                <% } %>
                    <a href="/home">Home<span class="beacon_count" id="home_count"></span></a>
                </li>
                <li>
                    <a id="add_beacon" href="/home/add" data-controls-modal="add_beacon_modal" data-backdrop="true" data-keyboard="true">
                    Add a beacon/a>
                </li>

                <% if (path == '/home/archive') { %>
                <li class="active">
                <% } else { %>
                <li>
                <% } %>
                    <a href="/home/archive">Beacon Archive<span class="beacon_count" id="archive_count"></span></a>
                </li>

                <li>
                    <a href="/account">Account</a>
                </li>
                <li>
                    <a href="/logout">Logout</a>
                </li>
            </ul>
            <div class="pull-right">
                <h3><a href="/home" >Welcome <%= user.name.first %>!</a></h3>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="row">
        <div class="span 16">
            <h4 id="banner">Your Saved Beacons<span class="beacon_count" id="all_count"></span></h4>
            <a class="btn default small" id="bookmarklet_show" href="#">Add Beacons/a>
            <!-- Display the beacons -->
            <div id="beacons" class="row">
                <div class="span12">
                  <div id="beacons_header" class="row">
                    <span class="span3"><h4>Time Added</h4></span> <span class="span9"><h4>Beacon</h4></span>
                  </div>
                  <div class="loading" style="display: none; text-align: center;"><img src="/images/loading.gif"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="add_beacon_modal" class="modal hide fade" style="display: none;">
    <div class="modal-header">
        <a href="#" class="close">x</a>
        <h3>Add a beacon for later</h3>
    </div>
    <div class="modal-body">
        <form action="/home/add" method="post" id="add_beacon_form">
            <input type="hidden" name="_method" value="post">
            <fieldset>
                <div class="clearfix">
                <label for="url">URL:</label>
                <div class="input">
                    <input class="xlarge" id="url" type="url" name="url" placeholder="http://www.google.com" required="required">
                </div>
            </div>
            </fieldset>
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn primary" type="submit" onClick="addBeacon($('#add_beacon_form'), $('#add_beacon_modal'));">Add!</button>
        <button class="btn default" type="button" onClick="$('#add_beacon_modal').modal('hide');">Close</button>
    </div>
</div>
